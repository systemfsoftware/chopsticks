{
	"name": "@systemfsoftware/chopsticks",
	"version": "0.14.2-1-beta.1",
	"author": "Acala Developers <hello@acala.network>",
	"license": "Apache-2.0",
	"bin": "./chopsticks.cjs",
	"type": "module",
	"scripts": {
		"clean": "rm -rf dist tsconfig.tsbuildinfo",
		"build": "yarn clean && ../../package-build.sh",
		"docs:prep": "typedoc",
		"depcheck": "npx depcheck --ignore-patterns='*.test.ts'"
	},
	"dependencies": {
		"@pnpm/npm-conf": "^2.2.2",
		"@polkadot/api": "^12.3.1",
		"@polkadot/api-augment": "^12.3.1",
		"@polkadot/rpc-provider": "^12.3.1",
		"@polkadot/types": "^12.3.1",
		"@polkadot/util": "^13.0.2",
		"@polkadot/util-crypto": "^13.0.2",
		"@systemfsoftware/chopsticks-core": "workspace:*",
		"@systemfsoftware/chopsticks-db": "workspace:*",
		"axios": "^1.7.4",
		"comlink": "^4.4.1",
		"dotenv": "^16.4.5",
		"global-agent": "^3.0.0",
		"js-yaml": "^4.1.0",
		"jsondiffpatch": "^0.5.0",
		"lodash": "^4.17.21",
		"ws": "^8.17.1",
		"yargs": "^17.7.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@swc/cli": "0.4.0",
		"@swc/core": "^1.7.6",
		"@types/global-agent": "^2.1.3",
		"@types/js-yaml": "^4.0.9",
		"@types/lodash": "^4.17.6",
		"@types/node": "^20.14.9",
		"@types/ws": "^8.5.10",
		"@types/yargs": "^17.0.32",
		"typescript": "^5.5.3"
	},
	"files": [
		"dist/esm/**",
		"dist/cjs/**",
		"chopsticks.cjs"
	],
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"exports": {
		".": {
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js",
			"default": "./dist/esm/index.js"
		},
		"./*": {
			"require": "./dist/cjs/*.js",
			"import": "./dist/esm/*.js",
			"default": "./dist/esm/*.js"
		},
		"./plugins/*": {
			"require": "./dist/cjs/plugins/*.js",
			"import": "./dist/esm/plugins/*.js",
			"default": "./dist/esm/plugins/*.js"
		},
		"./utils/*": {
			"require": "./dist/cjs/utils/*.js",
			"import": "./dist/esm/utils/*.js",
			"default": "./dist/esm/utils/*.js"
		}
	}
}
